[global]
    font = DejaVu Sans Mono 18
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "x5+0+0"
    transparency = 0
    idle_threshold = 0
    follow = mouse
    show_indicators = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = frame
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/x-www-browser
    icon_position = off

[frame]
    width = 3
    color = "#aaaaaa"

[shortcuts]
    # Close notification.
    close = mod4+dead_circumflex

    # Re-display last message.
    history = mod4+shift+dead_circumflex

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#222222"
    foreground = "#888888"
    timeout = 5

[urgency_normal]
    background = "#285577"
    foreground = "#ffffff"
    timeout = 5

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    timeout = 5

