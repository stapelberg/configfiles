[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    background = "#000000"
    foreground = "#888888"
    timeout = 5

[urgency_normal]
    background = "#000000"
    foreground = "#ffffff"
    timeout = 5

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    timeout = 5

