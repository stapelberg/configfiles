map q :tabp<ENTER>
map v :tabn<ENTER>
map t :tabopen<ENTER>:o<SPACE>
map o :open<SPACE>
map m :set guioptions=mrb<CR>
map M :set guioptions=rb<CR>

" Remap d to close the window without selecting the right tab
" to allow tabmixplus or tabkit to manage focus
map d <C-v><C-w>

" Use the original meaning of C-w and C-t
map <C-w> <Nop>
map <C-t> <Nop>

map + zI
map -- - zO

set defsearch=

let g:hintchars="uiaenrtd"
let g:hintsio="iO"

source ~/.vimperator/plugins/char-hints.js
